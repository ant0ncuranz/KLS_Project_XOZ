@import url('basic.css');

.article_header {
    background: #4f81bd url(../resources/brackets/bracket_left_blue.jpg) no-repeat left top;
    height: 44px;
    margin-bottom: 1px;
    overflow: hidden;
    padding-left: 20px;
    color: #4f81bd;
}

.article_title {
    background: url(../resources/brackets/bracket_right_blue.jpg) no-repeat right top;
    font-size: 16px;
    height: 44px; /* Analog zum Zeilenabstand dieses Elements */
    display: inline-block;
    margin: 0;
    line-height: 44px;  /* Analog zur HÃ¶he dieses Elements */
    padding: 0 26px 0 8px;
    max-width: 600px;
    border-right: 5px solid white;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}